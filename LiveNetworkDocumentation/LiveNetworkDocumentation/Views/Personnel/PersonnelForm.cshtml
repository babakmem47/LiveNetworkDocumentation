@using LiveNetworkDocumentation.Models
@model LiveNetworkDocumentation.ViewModels.PersonnelSematMantagheViewModel

@{
    ViewBag.Title = "title";
}
<br />
<div class="row">
    <div class="col-lg-2 col-xs-2"></div>
    <div class="col-lg-8 col-xs-8">
        <h2>@Model.Title</h2>
    </div>
    <div class="col-lg-2 col-xs-2"></div>
</div>
<br />
<div class="row">
    <div class="col-lg-2 col-xs-2"></div>
    <div class="col-lg-8 col-xs-8">
        @using (Html.BeginForm("Save", "Personnel"))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>


            <div class="form-group">
                @Html.LabelFor(m => m.SematId)
                @Html.DropDownListFor(m => m.SematId, new SelectList(Model.Semats, "Id", "Name"), "", new { @class = "form-control"})
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ManateghId)
                @Html.DropDownListFor(m => m.ManateghId, new SelectList(Model.Manateghs, "Id", "Name"), "", new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.TelDakheli)
                @Html.TextBoxFor(m => m.TelDakheli, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.TelDakheli)
                @*, "", new {@class="text-danger"})*@
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.TelMostaghim)
                @Html.TextBoxFor(m => m.TelMostaghim, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.TelMostaghim)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Mobile)
                @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Mobile)
            </div>





            @Html.HiddenFor(m => m.Id)
            @Html.AntiForgeryToken()

            <br />

            <button type="submit" class="btn btn-primary">ذخیره</button>

        }

    </div>
    <div class="col-lg-2 col-xs-2"></div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {

            //Trim TelDakheli inside TextBox
            document.getElementById("TelDakheli").value = document.getElementById("TelDakheli").value.trim();
            document.getElementById("TelMostaghim").value = document.getElementById("TelMostaghim").value.trim();

        });

        
    </script>
}
